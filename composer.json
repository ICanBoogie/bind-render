{
	"name": "icanboogie/bind-render",
	"type": "library",
	"description": "Binds icanboogie/render to ICanBoogie",
	"homepage": "http://icanboogie.org/",
	"license": "BSD-3-Clause",

	"authors": [
		{
			"name": "Olivier Laviale",
			"email": "olivier.laviale@gmail.com",
			"homepage": "http://www.weirdog.com/",
			"role" : "Developer"
		}
	],

	"support": {
		"issues": "https://github.com/ICanBoogie/bind-render/issues",
		"source": "https://github.com/ICanBoogie/bind-render"
	},

	"minimum-stability": "dev",

	"require": {
		"php": ">=5.5",
		"icanboogie/icanboogie": "^3.0",
		"icanboogie/render": "^0.5"
	},

	"require-dev": {
		"psr/log": "1.0.0"
	},

	"autoload": {
		"psr-4": {
			"ICanBoogie\\Binding\\Render\\": "lib"
		}
	},

	"scripts": {
		"post-autoload-dump": "ICanBoogie\\Autoconfig\\Hooks::on_autoload_dump"
	},

	"extra": {
		"icanboogie": {
			"config-path": "config"
		}
	}
}
